{
  "comments": false,
  "ignore": ["node_modules/**/*"],
  "presets": [
    [
      "@babel/preset-env",
      {
        "loose": true,
        "modules": false,
        "targets": "defaults"
      }
    ],
    ["@babel/preset-typescript"],
    [
      "@babel/preset-react",
      {
        // auto imports the functions that JSX transpiles to.
        // See https://babeljs.io/docs/babel-plugin-transform-react-jsx#options
        "runtime": "automatic"
      }
    ]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "alias": {
          "@": "./src"
        }
      }
    ]
  ]
}
