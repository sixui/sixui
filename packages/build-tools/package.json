{
  "private": true,
  "name": "@sixui/build-tools",
  "type": "module",
  "scripts": {
    "lint:check": "eslint . --fix",
    "ts:check": "tsc --pretty --noEmit",
    "check:all": "run-s lint:check ts:check",
    "build": "tsc --project tsconfig.build.json"
  },
  "files": [
    "dist",
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/main.d.ts",
        "default": "./dist/main.js"
      }
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/main.d.ts",
  "module": "./dist/main.js",
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@sixui/eslint-config": "workspace:*",
    "@sixui/typescript-config": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.10",
    "@types/signale": "^1.4.7",
    "@types/yargs": "^17.0.33",
    "@vanilla-extract/rollup-plugin": "^1.3.12",
    "fs-extra": "^11.3.0",
    "globals": "^15.14.0",
    "rollup": "^4.32.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-node-externals": "^8.0.0",
    "signale": "^1.4.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "yargs": "^17.7.2"
  }
}