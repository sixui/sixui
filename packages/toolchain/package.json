{
  "private": true,
  "name": "@sixui/toolchain",
  "type": "module",
  "scripts": {
    "lint:check": "eslint . --fix",
    "ts:check": "tsc --pretty --noEmit",
    "check:all": "run-s lint:check ts:check",
    "clean": "rm -rf dist",
    "build": "tsc --project tsconfig.build.json"
  },
  "files": [
    "dist",
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@sixui/eslint-config": "workspace:*",
    "@sixui/typescript-config": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.0",
    "@types/postcss-import": "^14.0.3",
    "@types/signale": "^1.4.7",
    "@types/yargs": "^17.0.33",
    "@vanilla-extract/rollup-plugin": "^1.3.13",
    "autoprefixer": "^10.4.20",
    "fs-extra": "^11.3.0",
    "globals": "^15.14.0",
    "postcss": "^8.5.1",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^7.0.2",
    "rollup": "^4.32.1",
    "rollup-plugin-banner2": "^1.3.1",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-node-externals": "^8.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "signale": "^1.4.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3"
  }
}