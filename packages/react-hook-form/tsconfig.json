{
  "extends": "@sixui/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "lib": ["es2023", "dom", "dom.iterable"],
    "types": ["node"],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    ".storybook/**/*.css"
  ]
}
