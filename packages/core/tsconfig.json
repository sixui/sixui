{
  "extends": "@sixui/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "lib": ["es2022", "dom", "dom.iterable"],
    "types": ["node"],
    "paths": {
      "~/*": ["./src/*"]
    },
  },
  "include": [
    "scripts/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
  ],
  "exclude": [
    "src/**/*.test.ts*",
    "src/**/*.stories.tsx",
  ]
}
