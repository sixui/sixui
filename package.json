{
  "private": true,
  "name": "sixui",
  "version": "0.0.1",
  "description": "SixUI Components Monorepo",
  "license": "MIT",
  "repository": "git+https://github.com/sixui/sixui.git",
  "author": "Olivier Pascal <olivier@pascal.re>",
  "type": "module",
  "scripts": {
    "prepare": "node .husky/install.mjs",
    "clean": "rimraf dist",
    "preinstall": "npx only-allow pnpm",
    "release": "auto shipit",
    "prettify:fix:file": "prettier --write",
    "lint:fix:file": "eslint --fix",
    "lint:check": "eslint scripts --fix",
    "ts:check": "tsc --pretty --noEmit",
    "check:all": "run-s lint:check ts:check",
    "dev": "turbo run dev",
    "turbo:check:all": "turbo run check:all",
    "pre-commit": "turbo run pre-commit",
    "build": "tsx scripts/build"
  },
  "lint-staged": {
    "**/*.(ts|js)?(x)": [
      "pnpm prettify:fix:file",
      "pnpm lint:fix:file"
    ]
  },
  "devDependencies": {
    "@auto-it/npm": "^11.3.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "auto": "^11.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.3.4",
    "validate-branch-name": "^1.3.2"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "readme": "README.md"
}