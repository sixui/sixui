{
  "private": true,
  "name": "sixui",
  "description": "Sixui Components Monorepo",
  "license": "MIT",
  "repository": "git+https://github.com/sixui/sixui.git",
  "author": "Olivier Pascal <olivier@pascal.re>",
  "type": "module",
  "scripts": {
    "prepare": "node .husky/install.mjs",
    "preinstall": "npx only-allow pnpm",
    "prettier:fix:file": "prettier --write",
    "ncu": "npx npm-check-updates -i -p pnpm --deep",
    "dev": "nx run core:dev",
    "check": "nx run-many -t check",
    "pre-commit": "nx run-many -t pre-commit",
    "build": "nx run-many -t build",
    "release:dry": "nx release --dry-run",
    "release": "nx release"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@nx/js": "^21.6.4",
    "@sixui/prettier-config": "workspace:*",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "npm-run-all": "^4.1.5",
    "nx": "21.6.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "validate-branch-name": "^1.3.2"
  },
  "packageManager": "pnpm@10.18.2",
  "engines": {
    "pnpm": ">=9"
  },
  "readme": "README.md",
  "pnpm": {
    "onlyBuiltDependencies": [
      "nx"
    ]
  }
}
