{
  "private": true,
  "name": "sixui",
  "version": "0.0.1",
  "description": "SixUI Components Monorepo",
  "license": "MIT",
  "repository": "git+https://github.com/sixui/sixui.git",
  "author": "Olivier Pascal <olivier@pascal.re>",
  "type": "module",
  "scripts": {
    "prepare": "node .husky/install.mjs",
    "preinstall": "npx only-allow pnpm",
    "release": "auto shipit",
    "prettier:fix:file": "prettier --write",
    "lint:check": "eslint scripts --fix",
    "dev": "turbo run dev",
    "turbo:check:all": "turbo run check:all",
    "pre-commit": "turbo run pre-commit",
    "build": "turbo run build",
    "ncu": "npx npm-check-updates -i -p pnpm --deep"
  },
  "lint-staged": {
    "**/*.(ts|js)?(x)": [
      "pnpm prettier:fix:file"
    ]
  },
  "devDependencies": {
    "@auto-it/npm": "^11.3.0",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "auto": "^11.3.0",
    "eslint": "^9.19.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "turbo": "^2.4.0",
    "validate-branch-name": "^1.3.2"
  },
  "packageManager": "pnpm@10.2.1",
  "engines": {
    "pnpm": ">=9"
  },
  "readme": "README.md"
}