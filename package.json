{
  "name": "@sixui/ui",
  "version": "0.0.465",
  "description": "Material Design 3 for the web.",
  "homepage": "https://sixui.com",
  "license": "MIT",
  "repository": {
    "url": "git+https://github.com/sixui/sixui.git",
    "type": "git",
    "directory": "packages/@sixui/sixui"
  },
  "author": "Olivier Pascal <olivier@pascal.re>",
  "sideEffects": [
    "*.css"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./package.json": "./package.json"
  },
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "dist/**/*"
  ],
  "scripts": {
    "prepare": "node .husky/install.mjs",
    "clean": "rimraf ./dist",
    "preinstall": "npx only-allow pnpm",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "test": "run-s test:cy",
    "build-storybook": "pnpm build:sb",
    "build:sb": "storybook build",
    "build:ts": "tsc --project tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "build:copy-files": "cp -R src/styles dist/",
    "build": "run-s build:ts build:copy-files",
    "release": "auto shipit",
    "prettify:fix:file": "prettier --write",
    "lint:fix:file": "eslint --fix",
    "dev": "turbo run dev",
    "check:all": "turbo run check:all",
    "pre-commit": "turbo run pre-commit"
  },
  "lint-staged": {
    "**/*.(ts|js)?(x)": [
      "pnpm prettify:fix:file",
      "pnpm lint:fix:file"
    ]
  },
  "dependencies": {
    "@floating-ui/core": "^1.6.9",
    "@floating-ui/react": "^0.27.3",
    "@material/material-color-utilities": "^0.3.0",
    "@olivierpascal/helpers": "^0.0.71",
    "@vanilla-extract/css": "^1.17.0",
    "@vanilla-extract/css-utils": "^0.1.4",
    "@vanilla-extract/dynamic": "^2.1.2",
    "clsx": "^2.1.1",
    "highlight-words": "^2.0.0",
    "modern-normalize": "^3.0.1",
    "rainbow-sprinkles": "^1.0.0",
    "react-aria": "^3.37.0",
    "react-remove-scroll": "^2.6.3",
    "react-transition-group": "^4.4.5"
  },
  "devDependencies": {
    "@auto-it/npm": "^11.3.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@sixui/eslint-config": "workspace:*",
    "auto": "^11.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.2",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "turbo": "^2.3.4",
    "validate-branch-name": "^1.3.2"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "readme": "README.md"
}