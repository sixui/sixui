{
  "extends": "@sixui/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2022", "dom", "dom.iterable"],
    "types": ["node", "vite/client"],
    "paths": {
      "~/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "incremental": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx"
  ]
}
